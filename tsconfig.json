{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "rootDir": "./src/",
        "allowJs": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictBindCallApply": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
